{% extends 'StasmoPanaxBundle::layout.html.twig' %}

{% block body %}
<ul class="nav nav-pills">
  <li class="active"><a href="{{ url('videos_new') }}">New Video</a></li>
</ul>
<h2>Videos</h2>
	<table class="table">
		{% for video in videos %}
		    <tr>
		    	<td>
		    		{{ video.name }}
		    	</td>
		    	<td>
		    		{{ video.embedString }}
		    	</td>
		    	<td>
		    		display order: {{ video.displayOrder }}
		    	</td>
		    	<td><a href="{{ path('edit_video', {id: video.id}) }}">Edit</a></td>
		    	<td><a href="{{ path('delete_video', {id: video.id}) }}">Delete</a></td>
		    </tr>
		{% endfor %}
	</table>
{% endblock %}