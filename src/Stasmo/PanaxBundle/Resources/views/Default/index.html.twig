{% extends 'StasmoPanaxBundle::layout.html.twig' %}

{% block body %}
<h1>What's new</h1>
<div class="row">
	<div class="col-md-8">
		{% for post in posts %}
		    <div class="post">
		    	<h3>{{ post.title }}<span class='pull-right'>{{ post.formattedDate }}</span></h3>
		    	<div>{{ post.body|raw }}</div>
		    </div>
		{% endfor %}
	</div>
	<div class="col-md-4 hidden-sm hidden-xs">
		{% for m in music %}
		    <div class="music" style='margin-bottom: 20px'>
				{{ m.embedString|raw }}
		    </div>
		{% endfor %}
	</div>
</div>
{% endblock %}